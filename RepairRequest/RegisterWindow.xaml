<Window x:Class="RepairRequest.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepairRequest"
        mc:Ignorable="d"
        Title="RegisterWindow" WindowStartupLocation="CenterScreen" Height="578" Width="818">
    <Grid Background="#FFFFFF" Margin="2,1,1,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="629.04"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,13,0,562" Grid.Row="0">
            <Button Content="ВХОД" FontSize="24" FontWeight="Bold" Margin="0,20,10,0" Background="Transparent" BorderBrush="Transparent" Click="LoginWindowButton_Click" Height="35"/>
            <Button Content="РЕГИСТРАЦИЯ" FontSize="24" FontWeight="Bold" Margin="10,20,0,0" Background="Transparent" BorderBrush="Transparent" Click="RegisterWindowButton_Click"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Margin="23,60,23,0" RenderTransformOrigin="0.5,0.5" Height="557">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.323"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.794"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <TextBlock Text="ФИО" Margin="0,10,0,0" FontSize="14" Foreground="#888888"/>
            <Border Background="#F5EAFE" CornerRadius="5" Padding="10" Margin="0,5,0,10">
                <TextBox Name="fullNameTextBox" BorderThickness="0" Background="Transparent"/>
            </Border>

            <TextBlock Text="Номер телефона" Margin="0,10,0,0" FontSize="14" Foreground="#888888"/>
            <Border Background="#F5EAFE" CornerRadius="5" Padding="10" Margin="0,5,0,10">
                <TextBox Name="phoneNumberTextBox" BorderThickness="0" Background="Transparent"/>
            </Border>

            <TextBlock Text="E-mail" Margin="0,10,0,0" FontSize="14" Foreground="#888888"/>
            <Border Background="#F5EAFE" CornerRadius="5" Padding="10" Margin="0,5,0,10">
                <TextBox Name="emailTextBox" BorderThickness="0" Background="Transparent"/>
            </Border>

            <TextBlock Text="Пароль" Margin="0,10,0,0" FontSize="14" Foreground="#888888"/>
            <Border Background="#F5EAFE" CornerRadius="5" Padding="10" Margin="0,5,0,10">
                <PasswordBox Name="passwordBox" BorderThickness="0" Background="Transparent"/>
            </Border>

            <TextBlock Text="Подтвердите пароль" Margin="0,10,0,0" FontSize="14" Foreground="#888888"/>
            <Border Background="#F5EAFE" CornerRadius="5" Padding="10" Margin="0,5,0,10">
                <PasswordBox Name="confirmPasswordBox" BorderThickness="0" Background="Transparent"/>
            </Border>

            <Button Content="РЕГИСТРАЦИЯ" Background="#A064E1" Foreground="White" Height="36" Margin="0,20,0,10" BorderBrush="#A064E1" FontSize="16" Click="RegistrationButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
